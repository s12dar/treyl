<resources>
    <!-- Base application theme. -->
    <style name="Theme.Transnature" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/black_dinner</item>
        <item name="colorOnPrimary">@color/textColorSecondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textColorSecondary</item>
        <item name="colorSecondaryVariant">@color/textColorSecondary</item>
        <item name="colorOnSecondary">@color/black_dinner</item>
        <!-- Font family. -->
        <item name="fontFamily">@font/red_hat_display_regular</item>
        <!-- Text color. -->
        <item name="android:textColor">@color/black_dinner</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Headline1 text. -->
    <style name="TextAppearance.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/red_hat_display_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Headline2 text. -->
    <style name="TextAppearance.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/red_hat_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Main Button. -->
    <style name="Buttons.MainAndDisabled" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@color/baby_powder</item>
        <item name="android:textColor">@color/baby_powder</item>
        <item name="backgroundTint">@color/black_dinner</item>
    </style>

    <!-- Secondary Button. -->
    <style name="Buttons.SecondaryNoDisabled" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">8sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="elevation">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="rippleColor">@color/black_dinner</item>
        <item name="backgroundTint">@color/color_secondary</item>
    </style>


    <style name="Theme.Transnature.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Transnature.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>